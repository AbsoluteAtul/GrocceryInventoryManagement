@model IEnumerable<prjGroceryStore4.category>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cat_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cat_status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cat_name)
        </td>
        <td>
            @{
                if (item.cat_status == Convert.ToByte(1))
                {<p>Active</p>}
                else
                {
                    <p> InActive </p>
                }

            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cat_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.cat_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.cat_id }, new { @class = "link-danger" })
        </td>
    </tr>
}

</table>
