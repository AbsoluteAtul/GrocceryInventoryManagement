@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!--CSS-->
    <link rel='stylesheet' type='text/css' media='screen' href='~/Content/themes/style.css'>


    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/3789dd4df1.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-image: url('../../Content/img/background.gif');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-position: center center;
            backdrop-filter: blur(30px);
            font-size: 20px;
            position: center;
        }
    </style>

</head>


<body>
    <!--Sidebar-->
    <div class="layout">
        <div class="layout__left-sidebar">
            <div class="sidebar-menu" style="padding: 10pc 10px 21px 19px; margin-left: -150px; margin-top:-150px">

                <div class="sidebar-menu__item sidebar-menu__item--active">
                    <img src="~/svg/home.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Home", "Index", "Products")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/img_552559.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Add Product", "Create", "Products")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/invoice.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Add Invoice", "Create", "PurchaseDetail")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/shopping-bag.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Purchases", "Index", "PurchaseDetail")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/categories.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Add Category", "Create", "Categories")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/menu.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("List Category", "Index", "Categories")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/wholesale.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("Add Supplier", "Create", "Suppliers")
                </div>
                <div class="sidebar-menu__item">
                    <img src="~/svg/hotel-supplier.png" class="sidebar-menu__item-icon" />
                    @Html.ActionLink("List Supplier", "Index", "Suppliers")
                </div>
                <!--Validation if login user is admin or not-->
                @if (Request.Cookies["Role"] == null)
                {

                }
                else if (Request.Cookies["Role"].Value == "admin")
                {
                    <div class="sidebar-menu__item">
                        <img src="~/svg/add-user.png" class="sidebar-menu__item-icon" />
                        @Html.ActionLink("Add User", "Create", "Users")
                    </div>
                    <div class="sidebar-menu__item">
                        <img src="~/svg/profile.svg" class="sidebar-menu__item-icon" />
                        @Html.ActionLink("Users", "Index", "Users")
                    </div>
                }
                <!--Name of the user logged in-->
                <div class="sidebar-menu__item">
                    <img src="~/svg/logout.png" class="sidebar-menu__item-icon" />
                    <ul class="nav navbar-nav" style="color:black">
                        @if (Request.Cookies["AuthCookie"] == null)
                        {
                            <li>@Html.ActionLink("Login", "Index", "Login")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                            <li>
                                <a href="#" style="color:black">
                                    (
                                    @Request.Cookies["AuthCookie"].Value
                                    )
                                </a>
                            </li>
                        }



                    </ul>
                </div>
            </div>
        </div>
     </div>
    
    <div style="margin:50px; padding: 10px 10px 80px 250px">
        @RenderBody()
    </div> 
       
    <footer id="footer">
        <hr />
        <i class="footer-item fa-brands fa-twitter"></i>
        <i class="footer-item fa-brands fa-facebook-f"></i>
        <i class="footer-item fa-brands fa-instagram"></i>
        <i class="footer-item fa-solid fa-envelope"></i>
        <p>&copy; Copyright @DateTime.Now.Year Atul & Rahul !</p>

    </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
    
</body>
</html>
