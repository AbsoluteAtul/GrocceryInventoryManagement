@model IEnumerable<prjGroceryStore4.role>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.r_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.r_status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.r_name)
        </td>
        <td>
            @{ 
                if (item.r_status == Convert.ToByte(1))
                {<p>Active</p>}
                else
                {
                        <p> InActive </p>
                    }

                }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.r_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.r_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.r_id }, new { @class = "link-danger" })
        </td>
    </tr>
}

</table>
