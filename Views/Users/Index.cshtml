@model IEnumerable<prjGroceryStore4.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayoutPage.cshtml";
}

<h2>Users</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.u_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.u_username)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.u_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role.r_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.u_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.u_username)
        </td>
        <td>
            @{
                if (item.u_status == Convert.ToByte(1))
                {<p>Active</p>}
                else
                {
                    < p > InActive </ p >
                }

            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.role.r_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.u_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.u_id }, new { @class = "link-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.u_id }, new { @class = "link-danger" })
        </td>
    </tr>
}

</table>
